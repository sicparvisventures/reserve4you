# R4Y Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE (Required)
# =============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# For production: https://r4y.app

# =============================================================================
# STRIPE (Required for billing)
# =============================================================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (create these in Stripe dashboard)
STRIPE_PRICE_ID_START=price_start_plan_id
STRIPE_PRICE_ID_PRO=price_pro_plan_id
STRIPE_PRICE_ID_PLUS=price_plus_plan_id

# =============================================================================
# GOOGLE OAUTH (Required for consumer login)
# =============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# OAuth redirect URIs to configure in Google Console:
# - http://localhost:3000/auth/callback (development)
# - https://your-project.supabase.co/auth/v1/callback (production)

# =============================================================================
# LIGHTSPEED POS (Optional for MVP)
# =============================================================================
LIGHTSPEED_CLIENT_ID=your-lightspeed-client-id
LIGHTSPEED_CLIENT_SECRET=your-lightspeed-client-secret
LIGHTSPEED_REDIRECT_URI=http://localhost:3000/api/lightspeed/connect

# =============================================================================
# DEVELOPMENT
# =============================================================================
NODE_ENV=development
