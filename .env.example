# Reserve4You Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# GOOGLE APIs
# =============================================================================
# Get your API keys from: https://console.cloud.google.com/apis/credentials

# Google Places API (Server-side - for business import during onboarding)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Google Maps Embed API (Client-side - for map embeds on location pages)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# SUPABASE
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/[your-project]/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# STRIPE
# =============================================================================
# Get these from: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# =============================================================================
# EMAIL
# =============================================================================
# Get your API key from: https://resend.com/api-keys

RESEND_API_KEY=re_your_resend_api_key_here

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Base URL (for email links, redirects, etc.)
NEXT_PUBLIC_BASE_URL=http://localhost:3007

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to Git!
# 2. For Vercel deployment, add these in Vercel Dashboard → Settings → Environment Variables
# 3. See VERCEL_ENV_SETUP.md for detailed setup instructions
# 4. Test your configuration: http://localhost:3007/api/debug/env-check
